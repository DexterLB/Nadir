<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.qtrp.nadir.Activity.RollActivity">

    <include
        android:id="@+id/lay"
        layout="@layout/content_roll_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.4"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/photoTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="30dp"
                    android:text="12:25"
                    android:gravity="center"
                    android:layout_weight="0.6" />

                <Button
                    android:id="@+id/resetTimeButton"
                    android:layout_width="0dp"
                    android:text="Now"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                    <EditText
                        android:id="@+id/latitudeEditText"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned"
                        android:text="42.45345" />

                    <EditText
                        android:id="@+id/longtitudeEditText"
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="numberDecimal|numberSigned"
                        android:text="23.34535" />

                <Button
                    android:id="@+id/resetLocationButton"
                    android:layout_width="0dp"
                    android:text="Here"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/addPhotoButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snap!" />


        </LinearLayout>

        <org.qtrp.nadir.CustomViews.ContextMenuRecyclerView
            android:id="@+id/photoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
